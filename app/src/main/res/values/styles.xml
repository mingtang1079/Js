<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_4a576a</item>
        <item name="colorPrimaryDark">@color/color_4a576a</item>
        <item name="colorAccent">@color/color_4a576a</item>
        <!--<item name="android:background">@color/default_bg</item>-->
    </style>

    <style name="toolbar_style" parent="Base.Widget.AppCompat.Light.ActionBar.TabText">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_color</item>

    </style>

    <style name="SpalashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/spalash</item>
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
    </style>

    <style name="ThemeFullScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/spalash</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="login_edit_style" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#3c3b3b</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>
</resources>
