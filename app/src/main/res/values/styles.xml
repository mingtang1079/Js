<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_4a576a</item>
        <item name="colorPrimaryDark">@color/color_4a576a</item>
        <item name="colorAccent">@color/color_4a576a</item>
        <!--<item name="android:background">@color/default_bg</item>-->
    </style>

    <style name="NoTitleTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="toolbar_style" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_color</item>

    </style>

    <style name="SpalashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/spalash</item>
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
    </style>

    <style name="ThemeFullScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/spalash</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:clipToPadding">false</item>-->
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="login_edit_style" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#3c3b3b</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="weekIndicatorStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#4A576A</item>
    </style>

    <style name="CustomRadioBtn">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_nobtn_selector</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomRadioBtn2">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_nobtn_selector</item>
    </style>

    <style name="CustomRadioBtn3">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_nobtn_selector</item>
    </style>

    <style name="default_circle_button_bg">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/default_circle_button</item>
    </style>

    <style name="circle_button_bg_8996aa">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/default_circle_button_8996aa</item>
    </style>

    <style name="default_circle_solid_button_bg">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>.
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/default_circle_button_solid</item>
    </style>
    <!-- recycleview/listview  里面的item的margin -->
    <style name="style_list_item_margin">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/layer_live_rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:numColumns">5</item>
    </style>

    <color name="transparent">#60000000</color>

    <style name="mProgressBar1">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">16dip</item> <!--设置进度条的高度 -->
        　　　　
        <item name="android:maxHeight">16dip</item>
        　　
    </style>

</resources>
