<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_bg"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:src="@drawable/icon_setting"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/icon_mes"
                android:visibility="gone"/>


        </RelativeLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/icon_ting"/>

                <!--<TextView-->
                <!--android:id="@+id/tv_degree"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="right|bottom"-->
                <!--android:background="@drawable/icon_dengji"-->
                <!--android:gravity="center"-->
                <!--android:padding="4dp"-->
                <!--android:text="V1"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="8sp"-->
                <!--android:visibility="gone"/>-->

            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="12"
                        android:text="登录啊发"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/com_round_corner_solid_women"
                        android:drawableLeft="@drawable/icon_women"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="@color/white_color"
                        android:textSize="11sp"
                        tools:text=" 22"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="PT1"
                        android:textColor="#99FFFFFF"
                        android:textSize="12sp"

                        />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="#99FFFFFF"
                        android:textSize="12sp"
                        tools:text="ID：234232323"/>
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/p_progressbar"
                        style="@style/mProgressBar1"
                        android:layout_width="100dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:layout_marginBottom="12dp"
                        tools:secondaryProgress="23"/>
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_barcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="2dp">

                <ImageView
                    android:id="@+id/iv_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_barcode"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_right"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/personaldata"
                    android:drawablePadding="8dp"
                    android:text="个人资料"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/icon_right"
                    android:gravity="right"
                    android:text=" "
                    android:textColor="#FF999999"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_shiming"
                    android:drawablePadding="8dp"
                    android:text="实名认证"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_verify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/icon_right"
                    android:gravity="right"
                    android:text="未认证"
                    android:textColor="#FF999999"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zizhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_jxzz"
                    android:drawablePadding="8dp"
                    android:text="教学资质"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_verify2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/icon_right"
                    android:gravity="right"
                    android:text="未认证"
                    android:textColor="#FF999999"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shenqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_huiyaun"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="会员申请"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_richeng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_richeng"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="我的日程"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tongji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_tongji"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="统计"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_shoucang"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="我的收藏"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dingjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_price"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="课程定价"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tuijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_tuijian"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="推荐好友"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wufu_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_service_time"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="工作时间设置"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yajing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_yajing"
                    android:drawablePadding="8dp"
                    android:text="押金"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_yajing_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/icon_right"
                    android:gravity="right"
                    android:text="未交"
                    android:textColor="#FF999999"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bidu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_bidu"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="教练必读"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_share"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="分享给朋友"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fankui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_yijian"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="意见反馈"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_about"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_right"
                    android:text="关于我们"
                    android:textColor="#4A576A"
                    android:textSize="14sp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>